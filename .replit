[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[deployment]
run = ["sh", "-c", "uvicorn undefined:app --host 0.0.0.0 --port 3000"]

[workflows]
runButton = "Start Recruitment System"

[[workflows.workflow]]
name = "Start Recruitment System"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_database.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python edge_service/main.py"

[[workflows.workflow]]
name = "Initialize and Start All Services"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_database.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/start_services.py"

[[workflows.workflow]]
name = "Start Discovery Service"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python discovery_service/main.py"

[[workflows.workflow]]
name = "Test System"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/test_system.py"

[[workflows.workflow]]
name = "Start Edge Service Only"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python edge_service/main.py"

[[ports]]
localPort = 8080
externalPort = 80
