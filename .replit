modules = ["python-3.12", "web", "nodejs-20"]
run = "uvicorn undefined:app --host 0.0.0.0 --port 3000"

[nix]
channel = "stable-24_05"
packages = ["libxcrypt"]

[deployment]
run = ["sh", "-c", "uvicorn undefined:app --host 0.0.0.0 --port 3000"]

[workflows]
runButton = "Complete System Start"

[[workflows.workflow]]
name = "Start Recruitment System"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_system.py"

[[workflows.workflow]]
name = "Initialize Database Only"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_database.py"

[[workflows.workflow]]
name = "Start Edge Service Only"
author = 44894209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python edge_service/main.py"

[[workflows.workflow]]
name = "Initialize and Start All Services"
author = 45002581
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_database.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python edge_service/main.py"

[[workflows.workflow]]
name = "Start All Microservices"
author = 45002581
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_all_microservices.py"

[[workflows.workflow]]
name = "Reinitialize and Start System"
author = 45002581
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -f recruitment_system.db"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_database.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python edge_service/main.py"

[[workflows.workflow]]
name = "Complete System Start"
author = 45002581
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_database.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python edge_service/main.py"

[[ports]]
localPort = 8080
externalPort = 80
